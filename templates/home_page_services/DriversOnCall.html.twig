    <style>
   
    .img-res{
  background: none;
  width:350px;
  height: 300px;
  margin: 20px;
  border-radius: 10px;
  min-width: 270px;
  min-height: 270px;

}
.separator{
  width:100%;
  height:100px;
  background-color:#1e2e42;
}
.form-wrapper{
  background-color:white;
  border:solid #1e2e42; 
  border-radius: 10px; 
  margin:10px;
  display:inline-block;
}
.contain{
    width: 95%;
    overflow: hidden;
    margin: 20px ;
    padding: 20px;
}
.list{
padding: 0px;
margin: 0px;
}
.part{
    list-style: none;
    float: left;
    width: 45%;
    margin: 30px;
    
}
.img-res{
    transition:1s;
}
.img-res:hover{
    
    width:50%;
    height:450px;
    margin:3px;
    
    
}
@media screen and (max-width:900px){
    .part{
        min-width: 95%;
        margin-left: 10px;
    }
    .img-res{
      min-width: 85%;
      min-height: 400px;
      
    }
}
    </style>
{% endblock %}
{% block headerlogo%}
              <img src="../img/logo.png" alt="logo">
              {% endblock %}
{% block logo %}
            <img src="../img/footer-logo.png" alt="">
