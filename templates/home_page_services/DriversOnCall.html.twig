{% block body %}
<div class="row" style="margin-top:30px;">
  <div class="col-lg-12 preamble">
   <h3 style="font-family: Scriptina,'Great Vibes', cursive; margin-top:5% ; color: #b30000;
    text-rendering: optimizeLegibility;
    text-transform: none;
    font-size: 72px;
    line-height: 1em;"> {% trans %}Drivers on call{% endtrans %}</h3>
   <p style="font-family:'Montserrat', sans-serif;  font-size:26px;"> {% trans %}You want to go out any hour of the day or night in Morocco ?{% endtrans %} </p>
   </div>
   <center>
   <p style=" font-family:'Montserrat', sans-serif;  font-size:26px;"> {% trans %}Dont  think too much , we have ererything  you needed  for you travels , juste choose the type of 
vehicles you want (class VIP cars , class van Vip)and driver language speaking , 30 minutes befor your 
departure to any destination you desire .
{% endtrans %} 
<br>{% trans %}We are here to make your holidays very easy{% endtrans %}
 </p>
 </center>
 </div>

<center><div class="container">
 
             <img  class="img-res" src="{{asset('../img/DriversOnCall/3 Mercedes.png')}}"/>
              <img  class="img-res" src="{{asset('../img/DriversOnCall/class S private.png')}}"/><br>
              <img  class="img-res" src="{{asset('../img/DriversOnCall/private_driver2.jpg')}}"/>
              <img  class="img-res" src="{{asset('../img/DriversOnCall/Private-Driver.png')}}"/><br>
               <img  class="img-res" src="{{asset('../img/DriversOnCall/Shooping-Geneva-Milano.png')}}"/>
             
 
 </div></center>

<div class="separator" >
<center>
<h1 style="font-family: Scriptina,'Great Vibes', cursive ; color: white;
    text-rendering: optimizeLegibility;
    text-transform: none;
    font-size: 70px;
    line-height: 1em; padding-top:10px;">{% trans %}Reservation & Infos{% endtrans %}</h1>
</center>
</div><br><br>
<div class="form-wrapper contain">
<div style=" width:100%;   ">
 {{ form_start(form) }}
    
    <b>{% trans %}Full Name:{% endtrans %}</b>
    {{ form_widget(form.Full_Name) }}
    <b>{% trans %}Telephone:{% endtrans %}</b>
    {{ form_widget(form.Telephone) }}
    <b>{% trans %}Email:{% endtrans %}</b>
    {{ form_widget(form.Email) }}
    <b>{% trans %}Vehicule Type{% endtrans %}</b>
    {{ form_widget(form.VehiculeType) }}
    <b>{% trans %}Number of persons:{% endtrans %}</b>
    {{ form_widget(form.NumberOfPerson) }}
    <b>{% trans %}Arrival place:{% endtrans %}</b>
    {{ form_widget(form.ArrivalPlace) }}
    <b>{% trans %}Driver's language:{% endtrans %}</b>
    {{ form_widget(form.language) }}
    <b>{% trans %}From:{% endtrans %}</b>
    {{ form_widget(form.StartDate) }}
    <b>{% trans %}To:{% endtrans %}</b>
    {{ form_widget(form.EndDate) }}
    <b>{% trans %}Message:{% endtrans %}</b>
    {{ form_widget(form.Message,{'attr':{'rows':"10"}}) }}<br>
    {{ form_end(form) }}
</div>

</div>

 
 {% endblock %}
