{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Concierge-{{field.FieldName}}{% endblock %}
{% block stylesheets %}
           <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Crimson+Text' rel='stylesheet' type='text/css'>
    
    <!-- STYLESHEETS-->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/font-awesome.min.css" rel="stylesheet">
    <link href='../css/owl.carousel.css' rel="stylesheet">
    <link href='../css/style.css' rel="stylesheet">
    <link href='../css/responsive.css' rel="stylesheet">
    <style>
    #fieldimage{
  background: none;
  width:270px;
  height: 270px;
  margin: 30px;
  border-radius: 10px;

}
.separator{
  width:100%;
  height:100px;
  background-color:#1e2e42;
}
.form-wrapper{
  background-color:white;
  border:solid #1e2e42; 
  border-radius: 10px; 
  margin:10px;
  height:700px;
}
    </style>
{% endblock %}
{% block headerlogo%}
              <img src="../img/logo.png" alt="logo">
              {% endblock %}
{% block logo %}
            <img src="../img/footer-logo.png" alt="">
            {% endblock %}
{% block body %}
<div class="row" style="margin-top:30px;">
  <div class="col-lg-12 preamble">
   <h3 > {{field.FieldDesc}} </h3>
   <p>  {{field.Contenue}}  </p>
   </div>
 </div>
 {% for fieldImage in fieldImages%}
             <img id="fieldimage"  src="data:image/jpg;base64,{{fieldImage.Image}}"/>
 {% endfor %} 
<div class="separator">
</div>
<div class="form-wrapper" >
<div style="width:50%; background-color:white; height:20px; float:left;">
<div style="margin:10px;">
 {{ form_start(form) }}
    
    {{ form_row(form.Full_Name,{'attr':{'placeholder':"Name"}}) }}
    {{ form_row(form.Telephone,{'attr':{'placeholder':"Telephone"}}) }}
    {{ form_row(form.Email,{'attr':{'placeholder':"Email"}}) }}
    
    <label>Which services are you interested in?</label>
    <div class="selectWrapper">
    <select name="serviceSelected">
    {% for service in services %}
        <option>{{service.Title}}</option>
    {% endfor %}
    </select>
    </div>
    {{ form_row(form.message,{'attr':{'placeholder':"Message",'rows':"10"}}) }}
    
    {{ form_end(form) }}
</div>
</div>
<div style="width:50%; background-color:white; height:20px; float:left; color:#616b6b;  padding:10px;">
<p style="width: 80%; margin-left:50px; font-size:20px;">If you think you are looking for a specific item or would like further information,
then feel free to contact us using the enquiry form and one of our executives will aim to 
get back to you immediately. Alternatively, you can email <a href="mailto:kechtrans@gmail.com">kechtrans@gmail.com  </a><p>
<br>
<div ><img style="width: 80%; height:350px; margin-left:50px;" src="data:image/jpg;base64,{{field.FieldPicture}}" alt=""></div>

</div>
</div>
{% endblock %}
{% block banner %}
<div id="banner" >
<div class="banner-bg">
          <div class="banner-bg-item"><img style="width: 100%; height:600px;" src="data:image/jpg;base64,{{field.FieldPicture}}" alt=""></div>
</div>
</div>
 {% endblock %}
 {% block javascripts %}
        <script src="../js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/owl.carousel.min.js"></script>
    <script src="../js/jquery.vide.min.js"></script>
    <script src="../js/jquery-ui-1.10.4.custom.min.js"></script>
    <script src="../js/script.js"></script>
    <script src="../js/jquery.ba-outside-events.min.js"></script>
    <script src="../js/jquery.magnific-popup.min.js"></script>
    <script src="../js/jquery.placeholder.js"></script>
<script src="https://kit.fontawesome.com/23bc112b5b.js" crossorigin="anonymous"></script>
        {% endblock %}