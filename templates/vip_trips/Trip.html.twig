{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Concierge-{{Trip.TripName}}{% endblock %}
{% block stylesheets %}
           <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Crimson+Text' rel='stylesheet' type='text/css'>
    
    <!-- STYLESHEETS-->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/font-awesome.min.css" rel="stylesheet">
    <link href='../css/owl.carousel.css' rel="stylesheet">
    <link href='../css/style.css' rel="stylesheet">
    <link href='../css/responsive.css' rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Montserrat:ital@1&display=swap" rel="stylesheet">
    <style>
   
    .img-res{
  background: none;
  width:300px;
  height: 270px;
  margin: 20px;
  border-radius: 10px;
  min-width: 270px;
  min-height: 270px;

}
.separator{
  width:100%;
  height:100px;
  background-color:#1e2e42;
}
.form-wrapper{
  background-color:white;
  border:solid #1e2e42; 
  border-radius: 10px; 
  margin:10px;
  display:inline-block;
}
.contain{
    width: 95%;
    overflow: hidden;
    margin: 20px ;
    padding: 20px;
}
.list{
padding: 0px;
margin: 0px;
}
.part{
    list-style: none;
    float: left;
    width: 45%;
    margin: 30px;
    
}
.img-res{
    transition:1s;
}
.img-res:hover{
    
    width:40%;
    height:80%;
    margin:3px;
    
    
}
.facilitie{
        margin-left:350px;
        
    }
.facilitie p {
    font-family:'Brush Script MT';
    font-size:30px;
}
@media screen and (max-width:900px){
    .part{
        min-width: 95%;
        margin-left: 10px;
    }
    .img-res{
      min-width: 85%;
      min-height: 400px;
      
    }
    .facilitie {
        margin-left: 10px;
    }
}
    </style>
{% endblock %}
{% block headerlogo%}
              <img src="../img/logo.png" alt="logo">
              {% endblock %}
{% block logo %}
            <img src="../img/footer-logo.png" alt="">
            {% endblock %}
{% block body %}
<div class="row" style="margin-top:30px;">
  <div class="col-lg-12 preamble">
   <h3 style="font-family: Scriptina,'Great Vibes', cursive; margin-top:5% ; color: #b30000;
    text-rendering: optimizeLegibility;
    text-transform: none;
    font-size: 72px;
    line-height: 1em;" > {{VTripName}} </h3>
   <p style="font-family:'Montserrat', sans-serif;  font-size:26px;">  {{TripPlanning}}  </p>
   
   
   </div>
   <div class="facilitie">
   <p  style=""> &nbsp; &#10003;  {{TripDesc|replace({',': "\n &nbsp; &#10003; "})|raw|nl2br}}  </p>
    </div>
 </div>
 <center><div class="container">
 {% for TripImage in TripImages %}
             <img  class="img-res" src="{{asset('../img/Trips/' ~ TripImage.ImageURL)}}"/>
             
 {% endfor %} 
 </div></center>
<div class="separator" >
<center>
<h1 style="font-family: Scriptina,'Great Vibes', cursive ; color: white;
    text-rendering: optimizeLegibility;
    text-transform: none;
    font-size: 70px;
    line-height: 1em; padding-top:10px;">{% trans %}Reservation & Infos {% endtrans %}</h1>
</center>
</div>

<div class="form-wrapper contain">
<div style=" width:100%;   ">
 {{ form_start(form) }}
    
    <b>{% trans %}Full Name:{% endtrans %}</b>
    {{ form_widget(form.Full_Name) }}
    <b>{% trans %}Telephone:{% endtrans %}</b>
    {{ form_widget(form.Telephone) }}
    <b>{% trans %}Email:{% endtrans %}</b>
    {{ form_widget(form.Email) }}
    <b>{% trans %}Number of persons:{% endtrans %}</b>
    {{ form_widget(form.NumberOfPersons) }}
    <b>{% trans %}From:{% endtrans %}</b>
    {{ form_widget(form.StartingON) }}
    <b>{% trans %}To:{% endtrans %}</b>
    {{ form_widget(form.FinishingON) }}
    <b>{% trans %}Message:{% endtrans %}</b>
    {{ form_widget(form.message,{'attr':{'rows':"10"}}) }}  <br>  
    {{ form_end(form) }}
</div>

</div>

 {% endblock %}
 {% block banner %}
<div id="banner" >
<div class="banner-bg">
          <div class="banner-bg-item img-fluid"><img style="width: 100%; height:600px;" src="{{asset('../img/Trips/' ~ Trip.TripImageUrl)}}" alt=""></div>
</div>
</div>
 {% endblock %}
 {% block lang %}
       
       <!-- Start Header-Language -->
                  <div class="header-language">
                    <button class="header-btn">
                    <i class="fa fa-globe"></i>
                    {{ app.session.get('_locale')|upper}}
                    </button>
                    <nav class="header-form" >
                      <ul class="custom-list" style="width:80px;">
                        <li ><a href="{{path('translation',{locale:'en'})}}"><img style="width:30px; height:30px; " src="../img/flags/united-states.png" style="display:inline-block;">EN</a></li>
                        <li ><a href="{{path('translation',{locale:'fr'})}}" ><img style="width:30px; height:30px; " src="../img/flags/france.png" style="display:inline-block;">FR</a></li>
                        <li><a href="#"><img style="width:30px; height:30px; " src="../img/flags/spain.png" style="display:inline-block;">ES</a></li>
                        <li><a href="{{path('translation',{locale:'ar'})}}"><img style="width:30px; height:30px; " src="../img/flags/morocco.png" style="display:inline-block;">AR</a></li>
                        <li><a href="#"><img style="width:30px; height:30px; " src="../img/flags/russia.png" style="display:inline-block;">Rus</a></li>
                        <li><a href="#"><img style="width:30px; height:30px; "src="../img/flags/china.png" style="display:inline-block;">Chi</a></li>
                      </ul>
                    </nav>
                  </div>
                  <!-- End Header-Language -->

                  {% endblock %}
 {% block javascripts %}
        <script src="../js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/owl.carousel.min.js"></script>
    <script src="../js/jquery.vide.min.js"></script>
    <script src="../js/jquery-ui-1.10.4.custom.min.js"></script>
    <script src="../js/script.js"></script>
    <script src="../js/jquery.ba-outside-events.min.js"></script>
    <script src="../js/jquery.magnific-popup.min.js"></script>
    <script src="../js/jquery.placeholder.js"></script>
<script src="https://kit.fontawesome.com/23bc112b5b.js" crossorigin="anonymous"></script>
{% endblock %}