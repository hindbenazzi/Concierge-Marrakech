{% block body  %}

      <div  class="container">
      <div class="row" style="margin-top: 13%; text-align: center;">
      {% for message in app.flashes('info') %}
<div class="alert alert-success">
{{message}}
</div>
{% endfor %}
<center style="font-family: Scriptina,'Great Vibes', cursive; margin-top:5% ; color: #ababab;
    text-rendering: optimizeLegibility;
    text-transform: none;
    font-size: 72px;
    line-height: 1em;" > {% trans %}Our Trips{% endtrans %}</center><br>
</div>
        <div style="margin-top: 3%" class="row">        
  {% for Trip in Trips %}  
  <div class="col-md-3">
  <div class="card" style="margin-bottom:20px;">
  <img id="img" class="card-img-top"  src="{{asset('../img/Trips/' ~ Trip.TripImageURL)}}"/> 
  <div class="card-body">
   <center> <b class="card-title">{{TripName[Trip.Id -1]}}</b><center>
    <center><b class="card-title"> {% trans %}Price:{% endtrans %}{{Trip.Price}} </b><center>
    <div class="card-text">
    <p id="description"><b> {% trans %}Characteristics:{% endtrans %}</b>{{TripPlanning[Trip.Id -1]}}</p> </div>
    <a href="{{path('Trips_details',{TripName:TripTo[Trip.Id -1]})}}"><button class="form-control" id="reserv-btn">{% trans %}Show More Details{% endtrans %}</button></a><br>
  </div>
</div>                  
  </div>
  {%endfor%}
  </div>
  
  </div>
