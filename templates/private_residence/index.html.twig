{% extends 'base.html.twig' %}
{% block title %}Concierge-Private Residence{% endblock %}
{% block stylesheets %}

<!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Crimson+Text' rel='stylesheet' type='text/css'>
<!-- STYLESHEETS-->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/font-awesome.min.css" rel="stylesheet">
    <link href='../css/owl.carousel.css' rel="stylesheet">
    <link href='../css/style.css' rel="stylesheet">
    <link href='../css/responsive.css' rel="stylesheet">



  <style>
   #body{
      
  }
    #carsImg{
  background: none;
  width:270px;
  height: 270px;
  margin: 30px;
  border-radius: 10px;
  margin-top: 15%;
  margin-left: 10%;
 display: inline;

}
#title{
  margin-top:5%;
}

.card{
  border-radius: 4px;
  width: 100%;
  box-shadow: 7px 7px 7px 2px rgba(181, 178, 178, 0.75);
  min-height:525px;
}

.card-text{  
  padding: 10px;
  max-height: 130px;
  overflow-y: scroll;
}


#img{
  width:100%;
  height: 200px;
  border-radius: 4px;
}

::-webkit-scrollbar {
  width: 5px;
}
::-webkit-scrollbar-track {
  background: #f1f1f1;
}
::-webkit-scrollbar-thumb {
  background: #888;
}
::-webkit-scrollbar-thumb:hover {
  background: #555;
}

#reserv-btn{
  width: 200px;
  background-color: #162232;
  color: white;
  margin: 10px;
 
}
#description{
  float: left;
}


    </style>
    {%endblock%}
{% block body  %}

      <div  class="container">
      <div class="row" style="margin-top: 13%; text-align: center;">
      {% for message in app.flashes('info') %}
<div class="alert alert-success">
{{message}}
</div>
{% endfor %}
<center style="font-size: 23px" ><b> {% trans %}Our Private Residences{% endtrans %}<b></center><br>
</div>
<div style="margin-top: 3%" class="row">        
  {% for Residence in Residences %}  
  <div class="col-md-3">
  <div class="card" >
  <img id="img" class="card-img-top"  src="{{asset('../img/Residence/' ~ Residence.MainImageUrl)}}"/> 
  <div class="card-body">
   <center> <b class="card-title">{{Residence.Name}}</b><center>
    <center><b class="card-title"> {{Residence.Adress}} </b><center>
    <center><b class="card-title"> {% trans %}size:{% endtrans %} {{Residence.size}}   </b><center>
    <center><b class="card-title"> {% trans %}Price:{% endtrans %}{{Residence.Price}} MAD/Day</b><center>
    <div id="description" class="card-text">
    <p ><b> {% trans %}Characteristics:{% endtrans %}</b>{{Residence.Description}}</p> 
    
    </div><a href="{{path('private_residence_details',{Resname:Residence.Name})}}"> 
    
    <button class="form-control" id="reserv-btn">{% trans %}Show Details{% endtrans %}</button></a>
  </div>
</div>                
  </div>
  
  {% endfor %}
  </div>
  </div>
  <div style="margin:20px;"></div>
{% endblock %}
 {% block javascripts %}
